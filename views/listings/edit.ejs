<% layout("/layouts/boilerplate.ejs") %>
<div class="row mt-3">
<div class="col-8 offset-2">



    <h3>Edit listing</h3>
    <form  action="/listings/<%=listdata._id%>?_method=PATCH" method="post" novalidate class="needs-validation">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
        <input type="text" name="title"  value="<%=listdata.title%>" class="form-control" required>
        <div class="invalid-feedback"> please enter title</div>
        </div>

         <div class="mb-3">
            <label for="description" class="form-label">Description</label>
        <input type="text" name="description"  value="<%=listdata.description%>" class="form-control" required>
        <div class="invalid-feedback"> please enter short description </div>
        </div>

         <div class="mb-3">
            <label for="price" class="form-label">Price</label>
        <input type="number" name="price" value="<%=listdata.price%>" class="form-control" required min="0">
        <div class="invalid-feedback"> please enter valid price </div>
        </div>

        <div class="mb-3">
            <label for="image" class="form-label">Image</label>
        <input type="text" name="image" value="<%=listdata.image%>" class="form-control" required>
        <div class="invalid-feedback"> please enter valid url </div>
        </div>

        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
       <input type="text" name="location" value="<%=listdata.location%>" class="form-control" required>
       <div class="invalid-feedback"> please enter location </div>
        </div>

         <div class="mb-3">
            <label for="country" class="form-label">Country</label>
       <input type="text" name="country" value="<%=listdata.country%>" class="form-control" required>
       <div class="invalid-feedback"> please enter country </div>
        </div>
        
        
        <button class="btn btn-dark add-btn mt-3">edit</button>
        <br><br>
    </form>
</div>
</div>