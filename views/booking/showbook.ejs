<% layout("/layouts/boilerplate.ejs") %>

<div class="container my-5">
  <h2 class="fw-bold mb-4">My Bookings</h2>

  <% if (mybook.length === 0) { %>
    <p class="text-muted">You have no bookings yet.</p>
  <% } %>

  <div class="row g-4">
    <% for (let booking of mybook) { %>
      <% if (booking.listing) { %>

        <div class="col-md-6">
          <div class="card shadow-sm rounded-4 p-4 position-relative">

            <!-- Listing info -->
            <h5 class="fw-semibold"><%= booking.listing.title %></h5>

            <p class="text-muted mb-1">
              ğŸ“ <%= booking.listing.location %>
            </p>

            <p class="mb-1">
              ğŸ—“ 
              <%= booking.checkIn.toLocaleDateString("en-IN") %>
              â†’
              <%= booking.checkOut.toLocaleDateString("en-IN") %>
            </p>

            <p class="mb-3">ğŸ‘¥ Guests: <%= booking.guests %></p>

            <!-- Action buttons -->
            <div class="d-flex justify-content-between align-items-center">
              
              <a 
                href="/listings/<%= booking.listing._id %>" 
                class="btn btn-outline-primary btn-sm rounded-pill px-3"
              >
                View Listing
              </a>

              <form 
                action="/booking/<%= booking._id %>?_method=DELETE" 
                method="POST"
                
              >
                <button class="btn btn-danger btn-sm rounded-pill px-3">
                  Cancel Booking
                </button>
              </form>

            </div>

          </div>
        </div>

      <% } %>
    <% } %>
  </div>
</div>
